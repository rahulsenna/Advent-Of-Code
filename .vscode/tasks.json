{
    "tasks": [
        {
            "label": "C/C++: g++ build active file (Linux)",
            "type": "cppbuild",
            "command": "time",
            "args": [
                "g++",
                "-std=c++17",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-include",
                "bits/stdc++.h",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}"
            ],
            
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
              },
              
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["delete_bin"],
            "detail": "Task generated by Debugger.",
            // "isBackground": true
        },
        {
            "label": "delete_bin",
            "type": "shell",
            "command": "rm -f ${workspaceFolder}/bin/${fileBasenameNoExtension}",
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared"
              },
            "isBackground": true
        },
        {
            "type": "cppbuild",
            "label": "C/C++: MSVC build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Yubits/stdc++.h",
                "/std:c++17",
                "/diagnostics:caret",
                "/Fe${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe",
                "${file}",
                "bits/stdc++.obj",
                // "/link",
                // "/INCREMENTAL:no"
            ],
            "options": {
                "cwd": "${workspaceFolder}/bin"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },

            "detail": "compiler: cl.exe",
        },

        {
            "label": "delete_bin_win",
            "type": "shell",
            "command": "if (Test-Path ${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe) { Remove-Item ${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe }",
            // "command": "del ${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe",
            // "isBackground": true
        },
    ],

    "version": "2.0.0"
}